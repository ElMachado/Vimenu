<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elmac.vimenu.InicioVimenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="cursive"
            android:text="Bienvenidos a Vimenu"
            android:textAlignment="center"
            android:textColor="@color/primarytext"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:fontFamily="casual" />

        <Button
            android:id="@+id/buttonVerCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="61dp"
            android:text="Ver Carta"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/buttonLlamar" />

        <Button
            android:id="@+id/buttonVerubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:text="Ver ubicaciÃ³n"
            android:layout_alignBaseline="@+id/buttonVerCarta"
            android:layout_alignBottom="@+id/buttonVerCarta"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageViewvimenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            app:srcCompat="@mipmap/vimenu"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonLlamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:background="@color/colorAccent"

            android:text="Contactenos"
            android:textColor="@color/primarytext"
            android:layout_below="@+id/imageViewvimenu"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
