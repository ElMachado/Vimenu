<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elmac.vimenu.InicioVimenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:drawableLeft="@mipmap/toldo"
            android:drawablePadding="8dp"
            android:drawableTintMode="src_over"
            android:text="Bienvenido a Vimenu"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:fontFamily="casual" />

        <Button
            android:id="@+id/buttonVerCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonVerubicacion"
            android:layout_alignBottom="@+id/buttonVerubicacion"
            android:layout_toEndOf="@+id/textView2"
            android:drawableLeft="@drawable/ic_restaurant_menu_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorAccent"
            android:padding="20dp"
            android:text="Ver Carta" />


        <Button
            android:id="@+id/buttonVerubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_map_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/holo_red_dark"
            android:padding="20dp"
            android:text="Ver ubicación" />

        <ImageView
            android:id="@+id/imageViewvimenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/vimenu"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonVerCarta"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:text=" "
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="¡Bienvenido a nuestro Menu virtual!"
            android:textAlignment="center"
            android:textColor="@color/secondarytext"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
